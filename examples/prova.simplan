    int a;

    void f(var int x, int n) {
        if (n==0) {
            x = n;
        } else {
            f(x, n-1);
        }
    }

    f(a, 3);

    /*
    n == 3
        a -> BOTTOM
        n -> USED

    n == 2
        a -> BOTTOM
